// Color

$color-main = #fff
$color-grey = #999
$color-second = #f39c12
$color-hover = #1197CB

// Bg-color

$bg-color-main = #2a2a2a
$bg-color-second = #202020

// font

$font-main = 'Open Sans', sans-serif
$font-second = 'Roboto Condensed', sans-serif
$font-decor = 'Yellowtail', cursive

// size

$width-menu = 237px
$height-menu = 72px

// Ruprure

rupture.scale = 0 425px 768px 1024px
rupture.scale-names = 'xs' 's' 'm' 'l'
rupture.enable-em-breakpoints = true

// Gumburger button

$color = #2196f3
$button-radius = 40px
$button-line-height = 2px
$burger-width = 0.40 * $button-radius
$burger-gutter = 6px