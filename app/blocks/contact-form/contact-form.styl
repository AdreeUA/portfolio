.contact-form
	width 380px
	
	
	&__item
		background-color $bg-color-second
		border 1px solid $bg-color-second
		width 100%
		color $color-main
		padding-x(rem(38px))
		
		&:not(.contact-form__item_message)
			line-height rem(36px)
			margin-bottom rem(14px)
			
		&_message
			margin-bottom rem(18px)
			height 167px
			line-height 1.4
			padding-top rem(15px)
			
	&__title
		font-family $font-second
		font-size rem(15px)
		text-transform uppercase
		margin-bottom rem(9px)
		color $color-second
						
	&__icon
		position relative
		
		&:before
			position absolute
			left rem(14px)
			bottom rem(2px)
			
		&_name
			&:before
				content url('../images/user-male.svg')
				size(rem(16px), rem(15px))

		&_email
			&:before
				content url('../images/mail.svg')
				size(rem(16px), rem(12px))
	
		&_website
			&:before
				content url('../images/globe.svg')
				size(rem(16px), rem(15px))
	
		&_phone
			&:before
				content url('../images/phone.svg')
				size(rem(15px), rem(16px))
				
	&__btn
		border none