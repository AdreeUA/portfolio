.project
	width 33.33333333%
	padding rem(20px)
	margin-bottom rem(35px)
	transition all .5s
	display flex
	flex-direction column
	justify-content space-between
	
	&:hover
		box-shadow 0 0 60px lighten(#000, .75)
		border-radius 7px
		
	+below('m')
		width 50%
	+below('xs')
		width 100%	

	&__image-wrap
		center()
		overflow hidden
		width 80%
		margin-bottom rem(20px)
		
	&__image
		width 100%
		height auto
		
	&__title
		text-align center
		color $color-second
		font-family $font-main
		font-size rem(21px)
		font-weight 700
		margin-bottom rem(15px)
		
	&__text
		font-size rem(14px)
		line-height 1.4
		margin-bottom rem(15px)
		
	&__link
		color $color-second
		text-decoration none
		
	&__btn
		text-align center
